        <div class="container-fluid">
            <a class="navbar-brand" href="/">Distributor</a>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-controller="Inventory" asp-action="Index">Inventory</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-controller="Orders" asp-action="Index">Orders</a>
