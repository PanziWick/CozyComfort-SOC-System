@model List<Distributor.Web.Models.OrderDTO>

@{
    ViewData["Title"] = "Orders";
}

<h2>Orders from Sellers</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Seller</th>
            <th>Blanket ID</th>
            <th>Quantity</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.SellerName</td>
                <td>@order.BlanketId</td>
                <td>@order.Quantity</td>
                <td>@order.Status</td>
                <td>
                    @if (order.Status == "Pending")
                    {
                        <a href="@Url.Action("UpdateStatus", "Orders", new { id = order.Id, status = "Approved" })" class="btn btn-success btn-sm">Approve</a>
                    }
                    @if (order.Status == "Approved")
                    {
                        <a href="@Url.Action("UpdateStatus", "Orders", new { id = order.Id, status = "Shipped" })" class="btn btn-primary btn-sm">Ship</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "Orders")" class="btn btn-primary">Create New Order</a>
