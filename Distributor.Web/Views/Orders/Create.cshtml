@model Distributor.Web.Models.OrderDTO

@{
    ViewData["Title"] = "Create Order";
}

<h2>Create Order</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="SellerName" class="form-label"></label>
        <input asp-for="SellerName" class="form-control" />
        <span asp-validation-for="SellerName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="BlanketId" class="form-label"></label>
        <input asp-for="BlanketId" class="form-control" />
        <span asp-validation-for="BlanketId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Quantity" class="form-label"></label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
